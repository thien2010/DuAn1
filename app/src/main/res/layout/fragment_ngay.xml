<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    tools:context=".ui.NgayFragment"
    android:background="@drawable/pig">

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_thongke_ngay"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Chọn ngày:"
            android:textColor="#000"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_date_ngay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@drawable/border_button"
            android:text="OK"
            android:textAllCaps="false"
            android:textColor="#fff" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Tổng thu:"
        android:textColor="#000"
        android:textSize="24sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_thu_ngay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:text=""
        android:textColor="#fff"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Tổng chi:"
        android:textColor="#000"
        android:textSize="24sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_chi_ngay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:text=""
        android:textColor="#fff"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Tích lũy:"
        android:textColor="#000"
        android:textSize="24sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_tichluy_ngay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:text=""
        android:textColor="#fff"
        android:textSize="24sp" />
    >
</LinearLayout>